@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="lastFMCharts">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Last FM Charts</title>
</head>
<body ng-controller="MainCtrl as ctrl">

    <form ng-submit="ctrl.submit()">
        <label>Artist 1: </label><input type="text" ng-model="ctrl.artists[0]" />
        <label>Artist 2: </label><input type="text" ng-model="ctrl.artists[1]" />
        <label>Artist 3: </label><input type="text" ng-model="ctrl.artists[2]" />
        <input type="submit" value="Submit" />
    </form>

    <div ng-show="ctrl.artistsInfo.length !== 0">
        <div>Listeners:</div>
        <div>
            <canvas id="listeners" width="600" height="400"></canvas>
        </div>

        <div>Plays:</div>
        <div>
            <canvas id="plays" width="600" height="400"></canvas>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js"></script>

    <script type="text/javascript">
        angular.module('lastFMCharts', [])
            .controller('MainCtrl', [
                '$http', function ($http) {
                    var self = this;
                    self.artists = [];
                    self.artistsInfo = [];

                    self.listenersChart = new Chart(document.getElementById('listeners').getContext('2d'));
                    self.playsChart = new Chart(document.getElementById('plays').getContext('2d'));

                    self.listenersChartFilled = null;
                    self.playsChartFilled = null;

                    self.fillCharts = function () {

                        var listenersData = {
                            labels: [
                                self.artistsInfo[0].Name,
                                self.artistsInfo[1].Name,
                                self.artistsInfo[2].Name
                            ],
                            datasets: [
                                {
                                    fillColor: "rgba(220,220,220,0.5)",
                                    strokeColor: "rgba(220,220,220,0.8)",
                                    highlightFill: "rgba(220,220,220,0.75)",
                                    highlightStroke: "rgba(220,220,220,1)",
                                    data: [
                                        self.artistsInfo[0].Listeners,
                                        self.artistsInfo[1].Listeners,
                                        self.artistsInfo[2].Listeners
                                    ]
                                }
                            ]
                        };

                        var playsData = {
                            labels: [
                                self.artistsInfo[0].Name,
                                self.artistsInfo[1].Name,
                                self.artistsInfo[2].Name
                            ],
                            datasets: [
                                {
                                    fillColor: "rgba(151,187,205,0.5)",
                                    strokeColor: "rgba(151,187,205,0.8)",
                                    highlightFill: "rgba(151,187,205,0.75)",
                                    highlightStroke: "rgba(151,187,205,1)",
                                    data: [
                                        self.artistsInfo[0].Plays,
                                        self.artistsInfo[1].Plays,
                                        self.artistsInfo[2].Plays
                                    ]
                                }
                            ]
                        };

                        self.listenersChartFilled = self.listenersChart.Bar(listenersData);
                        self.playsChartFilled = self.playsChart.Bar(playsData);
                    };
                        
                    self.submit = function () {
                        $http.post('@Url.Action("Compare")', { artists: self.artists })
                            .then(function (response) {
                                if (self.listenersChartFilled != null && self.playsChartFilled != null) {
                                    self.listenersChartFilled.destroy();
                                    self.playsChartFilled.destroy();
                                }

                                console.log(response.data);
                                self.artistsInfo = response.data;
                                
                                self.fillCharts();
                            }, function(error) {
                                console.log(error);
                            });
                    };
                }
            ])
    </script>

</body>
</html>